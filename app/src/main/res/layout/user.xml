<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="0.5dp">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="#F4511E"
        android:textColorHighlight="#A33E1E"
        app:layout_constraintStart_toEndOf="@id/textView16"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        tools:text="0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="4dp"
        android:text="To complete:"
        android:textColor="#E53935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView14" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textColor="#F4511E"
        android:textColorHighlight="#A33E1E"
        app:layout_constraintStart_toEndOf="@id/textView14"
        app:layout_constraintTop_toBottomOf="@id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="107dp"
        android:layout_height="20dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="2dp"
        android:text="I have finished:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="224dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Total calories(kcals) to lose today: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:text="target: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="52dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Today"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkIn" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:text="complete weeks: "
        app:layout_constraintStart_toEndOf="@+id/target"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="35dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="age: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="My Information"
        android:textColor="#E53935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="49dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="weight: "
        app:layout_constraintStart_toEndOf="@id/height"
        app:layout_constraintTop_toTopOf="@id/height" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="50dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:text="height: "
        app:layout_constraintStart_toEndOf="@id/age"
        app:layout_constraintTop_toTopOf="@+id/age" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:text="Angela"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/userImage" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Spinner
        android:id="@+id/changePhoto"
        android:layout_width="141dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:color="@color/colorAccent"
        android:entries="@array/photoArr"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="59dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="08/08"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/checkIn" />

    <Button
        android:id="@+id/checkIn"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:onClick="checkin"
        android:text="check in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Calories and Exercise"
        android:textColor="#E53935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:textColor="#F4511E"
        android:textColorHighlight="#A33E1E"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        tools:text="0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@mipmap/snack" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="4dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:onClick="toIndoor"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:srcCompat="@mipmap/exercise_round" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="61dp"
        android:layout_height="19dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="4dp"
        android:text="outdoor"
        android:textColor="#8E24AA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="Coins and Pets"
        android:textColor="#E53935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="45dp"
        android:layout_height="17dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="indoor"
        android:textColor="#8E24AA"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="133dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Let's exercise!!!"
        android:textColor="#8E24AA"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="56dp"
        android:layout_height="57dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:srcCompat="@mipmap/coin" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="58dp"
        android:layout_height="59dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:srcCompat="@mipmap/pet_round" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="4dp"
        android:onClick="toOurdoor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:srcCompat="@mipmap/run_round" />

    <Button
        android:id="@+id/button4"
        android:layout_width="146dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:onClick="toPet"
        android:text="My Pet"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:text="Moment"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:onClick="toPetStore"
        android:text="Pet Store"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="132dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="change portrait here"
        android:textColor="#7F2497"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/userImage"
        app:layout_constraintTop_toTopOf="@+id/userImage" />

    <EditText
        android:id="@+id/age"
        android:layout_width="70dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:inputType="number"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/height"
        android:layout_width="62dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@id/textView4" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="59dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintTop_toTopOf="@id/textView4" />

    <EditText
        android:id="@+id/target"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/textView6"
        app:layout_constraintTop_toTopOf="@id/textView6" />

    <EditText
        android:id="@+id/weeks"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:inputType="text"
        android:textSize="10sp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/textView7"
        app:layout_constraintTop_toTopOf="@id/textView6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:onClick="add"
        android:text="+"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/snack"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:text="0"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>